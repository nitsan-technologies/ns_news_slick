<T3DataStructure>
	<meta>
		<langDisable>1</langDisable>
	</meta>
	<sheets>
		<sDEF>
			<ROOT>
				<TCEforms>
					<sheetTitle>LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_tab.settings</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<!-- single news -->
					<settings.singleNews>
						<TCEforms>
							<label>LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_general.singleNews</label>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>tx_news_domain_model_news</allowed>
								<size>1</size>
								<maxitems>1</maxitems>
								<minitems>0</minitems>
							</config>
						</TCEforms>
					</settings.singleNews>

					<!-- settings.previewHiddenRecords -->
					<settings.previewHiddenRecords>
						<TCEforms>
							<label>LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_general.previewHiddenRecords</label>
							<config type="array">
								<type>select</type>
								<renderType>selectSingle</renderType>
								<items type="array">
									<numIndex index="0" type="array">
										<numIndex index="0">LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_general.previewHiddenRecords.I.2</numIndex>
										<numIndex index="1">2</numIndex>
									</numIndex>
									<numIndex index="1" type="array">
										<numIndex index="0">LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_general.previewHiddenRecords.I.1</numIndex>
										<numIndex index="1">1</numIndex>
									</numIndex>
									<numIndex index="2" type="array">
										<numIndex index="0">LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_general.previewHiddenRecords.I.0</numIndex>
										<numIndex index="1">0</numIndex>
									</numIndex>
								</items>
								<size type="integer">1</size>
								<maxitems type="integer">1</maxitems>
							</config>
						</TCEforms>
					</settings.previewHiddenRecords>

					<!-- startingpoint -->
					<settings.startingpoint>
						<TCEforms>
							<label>LLL:EXT:lang/Resources/Private/Language/locallang_general.xlf:LGL.startingpoint</label>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>pages</allowed>
								<size>3</size>
								<maxitems>50</maxitems>
								<minitems>0</minitems>
							</config>
						</TCEforms>
					</settings.startingpoint>

					<!-- recursive -->
					<settings.recursive>
						<TCEforms>
							<label>LLL:EXT:lang/Resources/Private/Language/locallang_general.xlf:LGL.recursive</label>
							<config>
								<type>select</type>
								<renderType>selectSingle</renderType>
								<items type="array">
									<numIndex index="1" type="array">
										<numIndex index="0">LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_general.recursive.I.inherit</numIndex>
										<numIndex index="1"></numIndex>
									</numIndex>
									<numIndex index="2" type="array">
										<numIndex index="0">LLL:EXT:frontend/Resources/Private/Language/locallang_ttc.xlf:recursive.I.0</numIndex>
										<numIndex index="1">0</numIndex>
									</numIndex>
									<numIndex index="3" type="array">
										<numIndex index="0">LLL:EXT:frontend/Resources/Private/Language/locallang_ttc.xlf:recursive.I.1</numIndex>
										<numIndex index="1">1</numIndex>
									</numIndex>
									<numIndex index="4" type="array">
										<numIndex index="0">LLL:EXT:frontend/Resources/Private/Language/locallang_ttc.xlf:recursive.I.2</numIndex>
										<numIndex index="1">2</numIndex>
									</numIndex>
									<numIndex index="5" type="array">
										<numIndex index="0">LLL:EXT:frontend/Resources/Private/Language/locallang_ttc.xlf:recursive.I.3</numIndex>
										<numIndex index="1">3</numIndex>
									</numIndex>
									<numIndex index="6" type="array">
										<numIndex index="0">LLL:EXT:frontend/Resources/Private/Language/locallang_ttc.xlf:recursive.I.4</numIndex>
										<numIndex index="1">4</numIndex>
									</numIndex>
									<numIndex index="7" type="array">
										<numIndex index="0">LLL:EXT:frontend/Resources/Private/Language/locallang_ttc.xlf:recursive.I.5</numIndex>
										<numIndex index="1">250</numIndex>
									</numIndex>
								</items>
							</config>
						</TCEforms>
					</settings.recursive>
				</el>
			</ROOT>
		</sDEF>
		<additional>
			<ROOT>
				<TCEforms>
					<sheetTitle>LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_tab.additional</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<!-- PID Detail Page -->
					<settings.detailPid>
						<TCEforms>
							<label>LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_additional.detailPid</label>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>pages</allowed>
								<size>1</size>
								<maxitems>1</maxitems>
								<minitems>0</minitems>
							</config>
						</TCEforms>
					</settings.detailPid>

					<!-- PID List Page -->
					<settings.listPid>
						<TCEforms>
							<label>LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_additional.listPid</label>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>pages</allowed>
								<size>1</size>
								<maxitems>1</maxitems>
								<minitems>0</minitems>
							</config>
						</TCEforms>
					</settings.listPid>

					<!-- PID Back -->
					<settings.backPid>
						<TCEforms>
							<label>LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_additional.backPid</label>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>pages</allowed>
								<size>1</size>
								<maxitems>1</maxitems>
								<minitems>0</minitems>
							</config>
						</TCEforms>
					</settings.backPid>

					<!-- Tags -->
					<settings.tags>
						<TCEforms>
							<label>LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_additional.tags</label>
							<config>
								<type>group</type>
								<internal_type>db</internal_type>
								<allowed>tx_news_domain_model_tag</allowed>
								<size>3</size>
								<minitems>0</minitems>
								<maxitems>99</maxitems>
							</config>
						</TCEforms>
					</settings.tags>

					<!-- only not displayed news -->
					<settings.excludeAlreadyDisplayedNews>
						<TCEforms>
							<label>LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_additional.excludeAlreadyDisplayedNews</label>
							<config>
								<type>check</type>
							</config>
						</TCEforms>
					</settings.excludeAlreadyDisplayedNews>

					<!-- disable overrideDemand -->
					<settings.disableOverrideDemand>
						<TCEforms>
							<label>LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_additional.disableOverrideDemand</label>
							<config>
								<type>check</type>
								<default>1</default>
							</config>
						</TCEforms>
					</settings.disableOverrideDemand>
				</el>
			</ROOT>
		</additional>

		<!--
			################################
			  SHEET Template
			################################
		-->
		<template>
			<ROOT>
				<TCEforms>
					<sheetTitle>LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_tab.template</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>

					<!-- Image Width -->
					<settings.media.maxWidth>
						<TCEforms>
							<label>LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_template.mediaMaxWidth</label>
							<config>
								<type>input</type>
								<size>5</size>
								<eval>num</eval>
							</config>
						</TCEforms>
					</settings.media.maxWidth>

					<!-- Image Height -->
					<settings.media.maxHeight>
						<TCEforms>
							<label>LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_template.mediaMaxHeight</label>
							<config>
								<type>input</type>
								<size>5</size>
								<eval>num</eval>
							</config>
						</TCEforms>
					</settings.media.maxHeight>

					<!-- crop length Teaser -->
					<settings.cropMaxCharacters>
						<TCEforms>
							<label>LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_template.cropMaxCharacters</label>
							<config>
								<type>input</type>
								<size>5</size>
								<eval>num</eval>
							</config>
						</TCEforms>
					</settings.cropMaxCharacters>

					<!-- Template Layout -->
					<settings.templateLayout>
						<TCEforms>
							<label>LLL:EXT:news/Resources/Private/Language/locallang_be.xlf:flexforms_template.templateLayout</label>
							<config>
								<type>select</type>
								<itemsProcFunc>GeorgRinger\News\Hooks\ItemsProcFunc->user_templateLayout</itemsProcFunc>
								<renderType>selectSingle</renderType>
								<items>
									<numIndex index="0" type="array">
										<numIndex index="0"></numIndex>
										<numIndex index="1"></numIndex>
									</numIndex>
								</items>
							</config>
						</TCEforms>
					</settings.templateLayout>
				</el>
			</ROOT>
		</template>
		<!--########################################
			  SHEET Slick Slider Configuration
			########################################-->
		<slickSlider>
			<ROOT>
				<TCEforms>
					<sheetTitle>LLL:EXT:ns_news_slick/Resources/Private/Language/locallang_db.xlf:flexforms_tab.slickSlider</sheetTitle>
				</TCEforms>
				<type>array</type>
				<el>
					<settings.slicksliderType>
						<TCEforms>
							<label>LLL:EXT:ns_news_slick/Resources/Private/Language/locallang_db.xlf:flexform.slicksliderType</label>
							<onChange>reload</onChange>
							<config>
								<type>select</type>
								<items>
									<numIndex index="1">
										<numIndex index="0">LLL:EXT:ns_news_slick/Resources/Private/Language/locallang_db.xlf:slider_type.singleItem</numIndex>
										<numIndex index="1">single</numIndex>
									</numIndex>
									<numIndex index="2">
										<numIndex index="0">LLL:EXT:ns_news_slick/Resources/Private/Language/locallang_db.xlf:slider_type.multipleItem</numIndex>
										<numIndex index="1">multiple</numIndex>
									</numIndex>
									<numIndex index="3">
										<numIndex index="0">LLL:EXT:ns_news_slick/Resources/Private/Language/locallang_db.xlf:slider_type.responsiveItem</numIndex>
										<numIndex index="1">responsive</numIndex>
									</numIndex>
								</items>
							</config>
						</TCEforms>
					</settings.slicksliderType>
					<!-- common start-->
					<settings.slideToShow>
						<label>LLL:EXT:ns_news_slick/Resources/Private/Language/locallang_db.xlf:flexform.slideToShow</label>
						<displayCond>FIELD:settings.slicksliderType:!=:single</displayCond>
						<config>
							<type>input</type>
							<eval>int</eval>
							<size>5</size>
							<range>
								<lower>1</lower>
								<upper>5</upper>
							</range>
						</config>
					</settings.slideToShow>
					<settings.slideToScroll>
						<label>LLL:EXT:ns_news_slick/Resources/Private/Language/locallang_db.xlf:flexform.slidesToScroll</label>
						<displayCond>FIELD:settings.slicksliderType:!=:single</displayCond>
						<config>
							<type>input</type>
							<eval>int</eval>
							<size>5</size>
							<range>
								<lower>1</lower>
								<upper>5</upper>
							</range>
						</config>
					</settings.slideToScroll>
					<settings.slideSpeed>
						<label>LLL:EXT:ns_news_slick/Resources/Private/Language/locallang_db.xlf:flexform.speed</label>
						<config>
							<type>input</type>
							<eval>int</eval>
							<size>5</size>
						</config>
					</settings.slideSpeed>
					<settings.variableWidth>
						<label>LLL:EXT:ns_news_slick/Resources/Private/Language/locallang_db.xlf:flexform.variableWidth</label>
						<displayCond>FIELD:settings.slicksliderType:!=:single</displayCond>
						<config>
							<type>check</type>
						</config>
					</settings.variableWidth>
					<settings.transitionType>
						<TCEforms>
							<label>LLL:EXT:ns_news_slick/Resources/Private/Language/locallang_db.xlf:flexform.transitionType</label>
							<displayCond>FIELD:settings.slicksliderType:=:single</displayCond>
							<config>
								<type>select</type>
								<items>
									<numIndex index="1">
										<numIndex index="0">Move</numIndex>
										<numIndex index="1">false</numIndex>
									</numIndex>
									<numIndex index="2">
										<numIndex index="0">Fade</numIndex>
										<numIndex index="1">true</numIndex>
									</numIndex>
								</items>
							</config>
						</TCEforms>
					</settings.transitionType>
					<settings.dots>
						<TCEforms>
							<label>LLL:EXT:ns_news_slick/Resources/Private/Language/locallang_db.xlf:flexform.dots</label>
							<config>
								<type>check</type>
							</config>
						</TCEforms>
					</settings.dots>
					<settings.loop>
						<TCEforms>
							<label>LLL:EXT:ns_news_slick/Resources/Private/Language/locallang_db.xlf:flexform.loop</label>
							<config>
								<type>check</type>
							</config>
						</TCEforms>
					</settings.loop>
					<settings.autoScaleSlider>
						<TCEforms>
							<label>LLL:EXT:ns_news_slick/Resources/Private/Language/locallang_db.xlf:flexform.autoScaleSlider</label>
							<displayCond>FIELD:settings.slicksliderType:=:single</displayCond>
							<config>
								<type>check</type>
							</config>
						</TCEforms>
					</settings.autoScaleSlider>
					<settings.autoPlay>
						<TCEforms>
							<label>LLL:EXT:ns_news_slick/Resources/Private/Language/locallang_db.xlf:flexform.autoPlay</label>
							<onChange>reload</onChange>
							<config>
								<type>check</type>
							</config>
						</TCEforms>
					</settings.autoPlay>
					<settings.autoplaySpeed>
						<TCEforms>
							<label>LLL:EXT:ns_news_slick/Resources/Private/Language/locallang_db.xlf:flexform.autospeed</label>
							<displayCond>FIELD:settings.autoPlay:=:1</displayCond>
							<config>
								<type>input</type>
								<default>1000</default>
								<size>5</size>
							</config>
						</TCEforms>
					</settings.autoplaySpeed>
					<settings.pauseOnHover>
						<TCEforms>
							<label>LLL:EXT:ns_news_slick/Resources/Private/Language/locallang_db.xlf:flexform.pauseOnHover</label>
							<displayCond>FIELD:settings.autoPlay:=:1</displayCond>
							<config>
								<type>check</type>
							</config>
						</TCEforms>
					</settings.pauseOnHover>
					<settings.centerMode>
						<TCEforms>
							<label>LLL:EXT:ns_news_slick/Resources/Private/Language/locallang_db.xlf:flexform.centerMode</label>
							<displayCond>FIELD:settings.slicksliderType:IN:responsive,multiple</displayCond>
							<onChange>reload</onChange>
							<config>
								<type>check</type>
							</config>
						</TCEforms>
					</settings.centerMode>
					<settings.centerPadding>
						<TCEforms>
							<label>LLL:EXT:ns_news_slick/Resources/Private/Language/locallang_db.xlf:flexform.centerPadding</label>
							<displayCond>FIELD:settings.centerMode:=:1</displayCond>
							<config>
								<type>input</type>
								<eval>int</eval>
								<default>60</default>
								<size>5</size>
								<range>
									<lower>60</lower>
									<upper>200</upper>
								</range>
							</config>
						</TCEforms>
					</settings.centerPadding>
					<!-- common end-->
				</el>
			</ROOT>
		</slickSlider>
	</sheets>
</T3DataStructure>